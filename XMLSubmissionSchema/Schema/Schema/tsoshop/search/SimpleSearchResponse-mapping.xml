<?xml version="1.0" encoding="UTF-8"?>
<mapping>
 	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.SimpleSearchResponse">	  
	    
	    <map-to xml="SimpleSearchResponse" />	      
	    
	    <field name="result" type="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.SimpleSearchResult" >
	      	<bind-xml name="SimpleSearchResult" node="element"/>
	    </field> 
	</class>
	
	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.SimpleSearchResult">	  
	    
	    <map-to xml="SimpleSearchResult" />	      
	    
	    <field name="pageHits" type="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.PageHits" >
	      	<bind-xml name="PageHits" node="element"/>
	    </field> 
	</class>
	
	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.PageHits">	  
	    
	    <map-to xml="PageHits" />	      
	    
	    <field name="searchResults" type="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.SearchResults" >
	      	<bind-xml name="searchresults" node="element"/>
	    </field> 
	</class>
	
	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.SearchResults">	  
	    
	    <map-to xml="searchresults" />	      
	    
	   <field name="hits" type="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.Hits" >
	      	<bind-xml name="hits" node="element"/>
	    </field>  
	</class>
	
	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.Hits">	  
	    
	    <map-to xml="hits" />	      
	    
	   <field name="hitsList" type="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.Hit" collection="arraylist" >
	      	<bind-xml name="hits" node="element"/>
	    </field>  
	</class>

	<class name="uk.co.gazettes.services.tsoshop.castor.entities.searchservice.Hit">	  
	    
	    <map-to xml="hit" />	      
	    
	    <field name="productId" type="string" >
	      	<bind-xml name="ProductId" node="element"/>
	    </field> 
	    <field name="productName" type="string" >
	      	<bind-xml name="ProductName" node="element"/>
	    </field> 
	    <field name="category" type="string" >
	      	<bind-xml name="Category" node="element"/>
	    </field> 
	    <field name="minOrderQuantity" type="int" >
	      	<bind-xml name="MinOrderQuantity" node="element"/>
	    </field> 
	    <field name="maxOrderQuantity" type="int" >
	      	<bind-xml name="MaxOrderQuantity" node="element"/>
	    </field> 
	    <field name="productType" type="string" >
	      	<bind-xml name="ProductType" node="element"/>
	    </field>
	    <field name="itemCode" type="string" >
	      	<bind-xml name="ItemCode" node="element"/>
	    </field> 
	</class>

</mapping>